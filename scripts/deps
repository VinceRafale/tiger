#!/bin/bash
sudo apt-get install python-reportlab
wget http://www.rabbitmq.com/releases/rabbitmq-server/v1.7.0/rabbitmq-server_1.7.0-1_all.deb
sudo dpkg -i rabbitmq-server_1.7.0-1_all.deb
sudo /etc/init.d/rabbitmq-server start
sudo rabbitmqctl add_user tiger h0k3yp0k3y
sudo rabbitmqctl add_vhost tiger
sudo rabbitmqctl set_permissions -p tiger tiger "" ".*" ".*"

../bin/easy_install authorize
../bin/easy_install django_extensions
../bin/easy_install django-filter
../bin/easy_install django-imagekit
../bin/easy_install django-haystack
../bin/easy_install django-pagination
../bin/easy_install django-sorting
../bin/easy_install celery
../bin/easy_install html5lib
../bin/easy_install pisa
../bin/easy_install pycheddar
../bin/easy_install South
../bin/easy_install Whoosh
cd ../
svn co http://code.djangoproject.com/svn/django/trunk/
cd trunk
../bin/python setup.py install
